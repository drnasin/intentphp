{
    "name": "intentphp/guard",
    "description": "A Laravel CLI tool that scans your application for common security risks: authorization gaps, unsafe query input, and mass assignment vulnerabilities.",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "security", "scanner", "authorization", "mass-assignment", "sql-injection", "ai", "static-analysis", "ci"],
    "authors": [
        {
            "name": "intentphp",
            "homepage": "https://github.com/drnasin"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0",
        "symfony/finder": "^6.0|^7.0",
        "symfony/process": "^6.0|^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
        "phpunit/phpunit": "^10.5 || ^11.0"
    },
    "autoload": {
        "psr-4": {
            "IntentPHP\\Guard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IntentPHP\\Guard\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "IntentPHP\\Guard\\GuardServiceProvider"
            ]
        }
    },
    "support": {
        "issues": "https://github.com/drnasin/intentphp/issues",
        "source": "https://github.com/drnasin/intentphp"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
